<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:padding="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:fontFamily="@font/circular_bold"
                android:text="@string/my_transports"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/gray"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            app:contentPadding="@dimen/_5sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/circular_bold"
                    android:text="@string/pickup_address"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword" />

                <TextView
                    android:id="@+id/tvPickupAdd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_regular"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/ic_blue_location"
                    android:textSize="@dimen/_9sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/pickup_dummyaddress"
                    android:textColor="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/circular_bold"
                    android:text="@string/dropoff_address"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword" />

                <TextView
                    android:id="@+id/DropOff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_regular"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/ic_blue_location"
                    android:textSize="@dimen/_9sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/dropoff_dummyaddress"
                    android:textColor="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity : "
                            android:textStyle="bold"
                            android:fontFamily="@font/circular_bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                        <TextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textStyle="bold"
                            android:fontFamily="@font/circular_regular"
                            android:text="35KG - 40KG"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/orange3"
                            android:inputType="textVisiblePassword" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:background="@drawable/orange_outline_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/circular_bold"
                        android:inputType="textVisiblePassword"
                        android:padding="@dimen/_8sdp"
                        android:text="Accept"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btParcel"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/orange_back_10"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/circular_bold"
                    android:text="@string/parcel_detail" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btChat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/green_back_10"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/circular_bold"
                    android:text="@string/chat" />

                <LinearLayout
                    android:id="@+id/llUpdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvStatusText"
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:text="@string/update_your_dev_status_here"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/circular_bold"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black" />

                    <Button
                        android:id="@+id/btUpdate"
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/orange_back_10"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/circular_bold"
                        android:text="@string/update" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/_5sdp"
            app:contentPadding="@dimen/_5sdp"
            android:elevation="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:fontFamily="@font/circular_bold"
                    android:text="@string/pickup_address"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_regular"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/ic_blue_location"
                    android:textSize="@dimen/_9sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/pickup_dummyaddress"
                    android:textColor="@color/gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:fontFamily="@font/circular_bold"
                    android:text="@string/dropoff_address"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/circular_regular"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/ic_blue_location"
                    android:textSize="@dimen/_9sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@string/dropoff_dummyaddress"
                    android:textColor="@color/gray" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quantity : "
                            android:textStyle="bold"
                            android:fontFamily="@font/circular_bold"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:inputType="textVisiblePassword" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textStyle="bold"
                            android:fontFamily="@font/circular_regular"
                            android:text="35KG - 40KG"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/orange3"
                            android:inputType="textVisiblePassword" />

                    </LinearLayout>

                    <TextView
                        android:background="@drawable/orange_outline_back"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/circular_bold"
                        android:inputType="textVisiblePassword"
                        android:padding="@dimen/_8sdp"
                        android:text="Intransist"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"/>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/orange_back_10"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/circular_bold"
                    android:text="@string/parcel_detail" />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/green_back_10"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/circular_bold"
                    android:text="@string/chat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.6"
                        android:layout_height="wrap_content"
                        android:text="@string/update_your_dev_status_here"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/circular_bold"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/black" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/orange_back_10"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:includeFontPadding="false"
                        android:textStyle="bold"
                        android:layout_gravity="end"
                        android:layout_centerVertical="true"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/circular_bold"
                        android:text="@string/update" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>