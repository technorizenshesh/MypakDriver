<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_back_black"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profileImg"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivBack" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/profileImg"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:text="Jhon Charle"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/light_gray"
                android:layout_marginBottom="@dimen/_60sdp">

                <LinearLayout
                    android:id="@+id/llLeftChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvLeftChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:background="@drawable/white_chat_back_left"
                        android:padding="@dimen/_10sdp"
                        android:text="hi , Jhon"/>

                    <TextView
                        android:id="@+id/tvLeftDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="5 min ago"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRightChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvRightChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:background="@drawable/purpal_chat_back_right"
                        android:padding="@dimen/_10sdp"
                        android:text="Hello Jhon Charle how are you"/>

                    <TextView
                        android:id="@+id/tvRightDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:textSize="@dimen/_10sdp"
                        android:text="1 min ago"/>

                </LinearLayout>

            </LinearLayout>

            <!--            <androidx.recyclerview.widget.RecyclerView-->
            <!--                android:id="@+id/rvChating"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_marginBottom="@dimen/_60sdp"-->
            <!--                android:background="@color/light_gray">-->
            <!--            </androidx.recyclerview.widget.RecyclerView>-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="4"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:background="@drawable/send_msg_back"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etSendMsg"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:textSize="@dimen/_13sdp"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:inputType="textCapSentences"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_8sdp"
                    android:paddingRight="@dimen/_8sdp"
                    android:hint="@string/type_a_message"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/ivSendMsg"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_height="@dimen/_40sdp"
                android:src="@drawable/send_msg"/>

        </LinearLayout>

    </RelativeLayout>

</layout>